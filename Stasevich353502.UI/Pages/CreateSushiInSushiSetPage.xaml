<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Stasevich353502.UI.ViewModels"
             x:DataType="viewModels:CreateSushiInSushiSetViewModel"
             x:Class="Stasevich353502.UI.Pages.CreateSushiInSushiSetPage"
             Title="Добавить суши в набор">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" 
              ColumnDefinitions="Auto, Auto"
              ColumnSpacing="15">
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Text="Введите название типа суши:" />
            <Entry x:Name="TypeEntry"
                   Grid.Row="0"
                   Grid.Column="1"
                   Placeholder="Урамаки"
                   Text="{Binding SushiType}" />
            <Label Grid.Row="1"
                   Grid.Column="0"
                   Text="Введите название суши:" />
            <Entry x:Name="NameEntry"
                   Grid.Row="1"
                   Grid.Column="1"
                   Placeholder="Калифония"
                   Text="{Binding Name}" />
            <Label Grid.Row="2"
                   Grid.Column="0"
                   Text="Введите суши в сете" />
            <Entry x:Name="AmountEntry"
                   Grid.Row="2"
                   Grid.Column="1"
                   Keyboard="Numeric"
                   Text="{Binding Amount}" />
            <Button Grid.Row="3"
                    Grid.Column="0"
                    Text="Добавить суши в набор"
                    Command="{Binding AddSushiToSushiSetCommand}"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>
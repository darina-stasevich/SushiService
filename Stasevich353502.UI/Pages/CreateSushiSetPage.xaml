<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Stasevich353502.UI.ViewModels"
             x:DataType="viewModels:CreateSushiSetViewModel"
             x:Class="Stasevich353502.UI.Pages.CreateSushiSetPage"
             Title="Создать сет">
       <Shell.TitleView>
              <HorizontalStackLayout
                     VerticalOptions="FillAndExpand" 
                     HorizontalOptions="FillAndExpand"
                     BackgroundColor="Plum">
                     <Label
                            Text="Создать сет" 
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" 
                            FontSize="Subtitle"
                            FontAttributes="Bold"
                            VerticalTextAlignment="Start"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Margin="0,0,10,0"/> 
              </HorizontalStackLayout>
       </Shell.TitleView>
       <ContentPage.Content>
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" 
              ColumnDefinitions="Auto, Auto"
              ColumnSpacing="15">
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Text="Введите название сета:" />
            <Entry x:Name="NameEntry"
                   Grid.Row="0"
                   Grid.Column="1"
                   Placeholder="Калифорния макси"
                   Text="{Binding Name}" />
            <Label Grid.Row="1"
                   Grid.Column="0"
                   Text="Введите цену сета:" />
            <Entry x:Name="PriceEntry"
                   Grid.Row="1"
                   Grid.Column="1"
                   Keyboard="Numeric"
                   Text="{Binding Price}" />
            <Label Grid.Row="2"
                   Grid.Column="0"
                   Text="Введите вес сета (в граммах):" />
            <Entry x:Name="Weight"
                   Grid.Row="2"
                   Grid.Column="1"
                   Keyboard="Numeric"
                   Text="{Binding Weight}" />
            <Button Grid.Row="3"
                    Grid.Column="0"
                    Text="Добавить сет"
                    Command="{Binding CreateSushiSetCommand}"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>
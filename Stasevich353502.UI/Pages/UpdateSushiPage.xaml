<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Stasevich353502.UI.ViewModels"
             xmlns:valueConverter="clr-namespace:Stasevich353502.UI.ValueConverters"
             x:DataType="viewModels:UpdateSushiViewModel"
             x:Class="Stasevich353502.UI.Pages.UpdateSushiPage"
             Title="Редактировать суши">
       <Shell.TitleView>
              <HorizontalStackLayout
                    VerticalOptions="FillAndExpand" 
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Tomato">
                     <Label
                            Text="Редактирование данных" 
                            TextColor="White" 
                            FontSize="Subtitle"
                            FontAttributes="Bold"
                            VerticalTextAlignment="Start"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Margin="0,0,10,0"/> 
              </HorizontalStackLayout>
       </Shell.TitleView>
       <ContentPage.Resources>
              <valueConverter:IdToImageSourceConverter x:Key="MyIdToImageSourceConverter" />
       </ContentPage.Resources>
       <ContentPage.Content>
        <Grid RowDefinitions="*, Auto, Auto, Auto, Auto, Auto" 
              ColumnDefinitions="Auto, *"
              ColumnSpacing="15">
               <Image x:Name="PreviewImageDisplay"
                      Grid.Row="0"
                      Grid.Column="0"
                      Source="{Binding PreviewImageSource}"
                      Aspect="AspectFill"
                      HeightRequest="200"
                      WidthRequest="200" />
               <Button Text="Выбрать изображение (PNG)"
                       Grid.Row="0"
                       Grid.Column="1"
                       Command="{Binding PickImageCommand}"
                       HorizontalOptions="End"
                       VerticalOptions="End"
                       MaximumHeightRequest="120"
                       BackgroundColor="Tomato"
                       TextColor="White"
                       FontSize="8"
                       Margin="0,5,0,15"/>
               <Label Grid.Row="1"
                      Grid.Column="0"
                      Text="Выберите суши сет:" />
               <Picker x:Name="SushiSetPicker"
                       Grid.Row="1"
                       Grid.Column="1"
                       ItemsSource="{Binding SushiSets}"
                       ItemDisplayBinding="{Binding Name}"
                       SelectedItem="{Binding SelectedSushiSet}">
               </Picker>
               <Label Grid.Row="2"
                      Grid.Column="0"
                      Text="Название типа суши:" />
            <Entry x:Name="TypeEntry"
                   Grid.Row="2"
                   Grid.Column="1"
                   Placeholder="{Binding CurrentSushi.SushiData.SushiType}"
                   Text="{Binding SushiType}" />
            <Label Grid.Row="3"
                   Grid.Column="0"
                   Text="Название суши:" />
            <Entry x:Name="NameEntry"
                   Grid.Row="3"
                   Grid.Column="1"
                   Placeholder="{Binding CurrentSushi.SushiData.SushiName}"
                   Text="{Binding Name}" />
            <Label Grid.Row="4"
                   Grid.Column="0"
                   Text="Введите количество суши в сете" />
            <Entry x:Name="AmountEntry"
                   Grid.Row="4"
                   Grid.Column="1"
                   Keyboard="Numeric"
                   Placeholder="{Binding CurrentSushi.Amount}"
                   Text="{Binding Amount}" />
            <Button Grid.Row="5"
                    Grid.Column="0"
                    Text="Изменить информацию"
                    BackgroundColor="Tomato"
                    TextColor="White"
                    Command="{Binding UpdateSushiCommand}"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>